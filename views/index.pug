doctype html
html(lang='en')
  head
    title KIWI Home
    include includes/css_link.pug

  body.goto-here
    include includes/nav.pug
    // TITLE 
    include includes/bg_img.pug
    .hero-wrap.hero-bread(style="background-image: url("+wallpaper_index+")")
      .container
        .row.no-gutters.slider-text.align-items-center.justify-content-center
          .col-md-9.ftco-animate.text-center
            p.breadcrumbs
              span.mr-2
                a(href='/',style='color:white;') Home
            h12.mb-0.bread(,style='color:white;') KEVII INTERNAL WEB
    // CONTENT
    section#home-section.hero
      .container
        .row.justify-content-center.mb-3.pb-3
          .col-lg-12.text.ftco-animate(style="padding-right: 10%; padding-left:10%;")
            .pt-3.mt-4
              h4.mb-5(style="text-shadow:1px 1px 4px rgb(160,160,160);") Announcements
              ul.comment-list
                
                li.comment
                  .vcard.bio
                    img(src='images/msg.png', alt='Image placeholder')
                  .comment-body
                    h8 #{row_announcement_1.name}
                    .meta #{row_announcement_1.date} AT #{row_announcement_1.time}
                    p #{row_announcement_1.announcement}
                    a(href=`${row_announcement_1.url}`)
                      span
                        | - URL -  
                  li.comment
                    .vcard.bio
                      img(src='images/msg.png', alt='Image placeholder')
                    .comment-body
                      h8 #{row_announcement_2.name}
                      .meta #{row_announcement_2.date} AT #{row_announcement_2.time}
                      p #{row_announcement_2.announcement}
                      a(href=`${row_announcement_2.url}`)
                        span
                          | - URL -
                  li.comment
                    .vcard.bio
                      img(src='images/msg.png', alt='Image placeholder')
                    .comment-body
                      h8 #{row_announcement_3.name}
                      .meta #{row_announcement_3.date} AT #{row_announcement_3.time}
                      p #{row_announcement_3.announcement}
                      a(href=`${row_announcement_3.url}`)
                        span
                          | - URL -
                .tag-widget.post-tag-container.mb-5.mt-5
                  .tagcloud
                    a.tag-cloud-link(href='/announcement') &nbsp;&nbsp;&nbsp;&nbsp;Read More&nbsp;&nbsp;&nbsp;&nbsp;
              // END announcement-list
    
    section.ftco-section.bg-light
      .container
        .row.justify-content-center.mb-3.pb-3
          .col-md-12.heading-section.text-center.ftco-animate
            h2.mb-4 Upcoming Events
            p
              | Show some support to the committees who strive to make your hall life more vibrant!
      .container
        .row
          each row_eventposter in rows_eventposter
            .col-sm.col-md-1.col-lg.ftco-animate
              .product
                //a.img-prod
                //a.icon.popup-vimeo.d-flex.justify-content-center.align-items-center
                a
                  img.img-fluid(src=`${row_eventposter.image}`, alt='Image placeholder')
                  .overlay
                .text.py-3.px-3
                  .d-flex
                    .pricing
                      p.price
                        span.price-sale #{row_eventposter.title}
                      p

                  h3 #{row_eventposter.date}
                  h3 #{row_eventposter.time}
                  a.buy-now.text-center.py-2.mr-1(href=`${row_eventposter.rsvp}`)
                    span
                      | - RSVP -  

    //END of upcoming events

    section#section-counter.ftco-section.ftco-counter.img(style="background-image: url("+kewallpaper+")")
      .container
        .row.justify-content-center.py-5
          .col-md-10
            .row
              .col-md-3.d-flex.justify-content-center.counter-wrap.ftco-animate
                .block-18.text-center
                  .text
                    strong.number(data-number='468',style='font-size:40px; color:white; text-shadow:2px 2px 4px #000000;') 0
                    span(style='font-size:15px; color:white;text-shadow: 2px 2px 4px #000000;' )
                      strong Residents
              .col-md-3.d-flex.justify-content-center.counter-wrap.ftco-animate
                .block-18.text-center
                  .text
                    strong.number(data-number='5',style='font-size:40px; color:white;text-shadow:2px 2px 4px #000000;') 0
                    span(style='font-size:15px; color:white;text-shadow: 2px 2px 4px #000000;')
                      strong Blocks
              .col-md-3.d-flex.justify-content-center.counter-wrap.ftco-animate
                .block-18.text-center
                  .text
                    strong.number(data-number='66',style='font-size:40px; color:white;text-shadow: 2px 2px 4px #000000;') 0
                    span(style='font-size:15px; color:white;text-shadow: 2px 2px 4px #000000;')
                      strong CCAS
              .col-md-3.d-flex.justify-content-center.counter-wrap.ftco-animate
                .block-18.text-center
                  .text
                    strong.number(style='font-size:40px; color:white; text-shadow: 2px 2px 4px #000000;') 1
                    span(style='font-size:15px; color:white;text-shadow: 2px 2px 4px #000000;')
                      strong KE
    script.
      if ('serviceWorker' in navigator) {
      console.log("Will the service worker register?");
      navigator.serviceWorker.register('service-worker.js')
      .then(function(reg){
      console.log("Yes, it did.");
      }).catch(function(err) {
      console.log("No it didn't. This happened: ", err)
      });
      }    
    // FOOTER
    include includes/footer.pug
